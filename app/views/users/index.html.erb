<!-- app/views/users/index.html.erb -->
<h1>List of Users</h1>
<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Email</th>
      <th>Actions</th>
      <th>Roles</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Assign Role", assign_role_user_path(user) %>
        </td>
        <td><%= user.roles.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
