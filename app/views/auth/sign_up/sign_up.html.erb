<h1>Sign Up</h1>
<%# show flash.now alert %>
<% if flash.now[:alert] %>
  <div class="alert alert-danger">
    <%= flash.now[:alert] %>
  </div>
<% end %>
<%= form_for @user, url: sign_up_post_auth_path do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, value: 'Yann', class: f.object.errors[:first_name].any? ? 'form-control is-invalid' : 'form-control'  %>
    <% if f.object.errors[:first_name].any? %>
      <div class="invalid-feedback">
        <%= f.object.errors.full_messages_for(:first_name).join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true, value: 'Le Corre', class: f.object.errors[:last_name].any? ? 'form-control is-invalid' : 'form-control' %>
    <% if f.object.errors[:last_name].any? %>
      <div class="invalid-feedback">
        <%= f.object.errors.full_messages_for(:last_name).join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email,  required: true, value: 'yannlc@posteo.net', class: f.object.errors[:email].any? ? 'form-control is-invalid' : 'form-control' %>
    <% if f.object.errors[:email].any? %>
      <div class="invalid-feedback">
        <%= f.object.errors.full_messages_for(:email).join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, required: true, value: '123456789', class: f.object.errors[:password].any? ? 'form-control is-invalid' : 'form-control' %>
    <% if f.object.errors[:password].any? %>
      <div class="invalid-feedback">
        <%= f.object.errors.full_messages_for(:password).join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, required: true, value: '123456789', class: f.object.errors[:password_confirmation].any? ? 'form-control is-invalid' : 'form-control' %>
    <% if f.object.errors[:password_confirmation].any? %>
      <div class="invalid-feedback">
        <%= f.object.errors.full_messages_for(:password_confirmation).join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Sign Up' %>
  </div>
<% end %>
<%# If user alread has account, invite to sign in %>
<p>Already have an account? <%= link_to 'Sign In', sign_in_auth_path %></p>
